int length = 5;
int[] array = new int[length];
array[0] = 5;
array[1] = 2;
array[2] = 7;
array[3] = 3;
array[4] = 2;

for (int i = 0; i < length; i++)
{
    for (int j = i; j >= 1; j--)
    {
        if (array[j] < array[j - 1])
        {
            int num2 = array[j - 1];
            array[j - 1] = array[j];
            array[j] = num2;
        }
    }
}

for (int i = 0; i < length; i++)
{
    System.Console.WriteLine(array[i]);
}